{
  "name": "devscope-api",
  "displayName": "DevScope API",
  "description": "Expose VS Code diagnostics and status via a local HTTP API.",
  "version": "0.1.0",
  "publisher": "Jonan",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devscope.startServer",
        "title": "%commands.startServer%"
      },
      {
        "command": "devscope.stopServer",
        "title": "%commands.stopServer%"
      },
      {
        "command": "devscope.restartServer",
        "title": "%commands.restartServer%"
      },
      {
        "command": "devscope.showStatus",
        "title": "%commands.showStatus%"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DevScope API",
      "properties": {
        "devscopeapi.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Local HTTP server port."
        },
        "devscopeapi.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Listening host. Use 127.0.0.1 by default for safety."
        },
        "devscopeapi.response.format": {
          "type": "string",
          "default": "v1",
          "enum": [
            "v1"
          ],
          "description": "Response format version."
        },
        "devscopeapi.diagnostics.defaultScope": {
          "type": "string",
          "default": "active",
          "enum": [
            "active",
            "workspace",
            "all"
          ],
          "description": "Default diagnostics scope when not specified by query params."
        },
        "devscopeapi.language": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "zh-CN"
          ],
          "description": "Display language for notifications and messages."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run generate-icons && @vscode/vsce package",
    "package:only": "@vscode/vsce package",
    "test": "jest",
    "generate-icons": "node scripts/generate-icons.js",
    "mcp:github": "@modelcontextprotocol/server-github"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.0",
    "@types/supertest": "^6.0.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "jest": "^29.7.0",
    "sharp": "^0.34.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jiang0977/DevScopeAPI.git"
  },
  "bugs": {
    "url": "https://github.com/Jiang0977/DevScopeAPI/issues"
  },
  "homepage": "https://github.com/Jiang0977/DevScopeAPI#readme",
  "license": "MIT",
  "keywords": [
    "vscode",
    "api",
    "diagnostics",
    "development",
    "server",
    "http",
    "monitoring",
    "tools"
  ],
  "icon": "resources/icon.png",
  "badges": [
    {
      "url": "https://img.shields.io/badge/version-0.1.0-blue.svg",
      "href": "https://github.com/Jiang0977/DevScopeAPI/releases",
      "description": "Version"
    },
    {
      "url": "https://img.shields.io/badge/license-MIT-green.svg",
      "href": "https://github.com/Jiang0977/DevScopeAPI/blob/main/LICENSE",
      "description": "License"
    }
  ]
}
