{
  "name": "devscope-api",
  "displayName": "DevScope API",
  "description": "Expose VS Code diagnostics and status via a local HTTP API.",
  "version": "0.1.0",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:devscope.startServer",
    "onCommand:devscope.stopServer",
    "onCommand:devscope.restartServer",
    "onCommand:devscope.showStatus",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devscope.startServer",
        "title": "DevScope: Start Server"
      },
      {
        "command": "devscope.stopServer",
        "title": "DevScope: Stop Server"
      },
      {
        "command": "devscope.restartServer",
        "title": "DevScope: Restart Server"
      },
      {
        "command": "devscope.showStatus",
        "title": "DevScope: Show Status"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DevScope API",
      "properties": {
        "devscopeapi.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Local HTTP server port."
        },
        "devscopeapi.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Listening host. Use 127.0.0.1 by default for safety."
        },
        "devscopeapi.response.format": {
          "type": "string",
          "default": "v1",
          "enum": [
            "v1"
          ],
          "description": "Response format version."
        },
        "devscopeapi.diagnostics.defaultScope": {
          "type": "string",
          "default": "active",
          "enum": [
            "active",
            "workspace",
            "all"
          ],
          "description": "Default diagnostics scope when not specified by query params."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "@vscode/vsce package",
    "test": "jest",
    "mcp:github": "@modelcontextprotocol/server-github"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.0",
    "@types/supertest": "^6.0.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "express": "^4.19.2"
  }
}
